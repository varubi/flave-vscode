{
    "name": "flave",
    "displayName": "Flave",
    "description": "Razor like view transpiler for Javascript",
    "version": "0.0.2",
    "publisher": "varubi",
    "engines": {
        "vscode": "^1.12.0"
    },
    "activationEvents": [
        "onLanguage:flave",
        "onCommand:flave.compile"
    ],
    "categories": [
        "Languages"
    ],
    "main": "./src/main",
    "dependencies": {
        "flave": "^1.0.0"
    },
    "contributes": {
        "commands": [
            {
                "command": "flave.compile",
                "title": "Compile FLAVE to JS"
            }
        ],
        "languages": [
            {
                "id": "flave",
                "aliases": [
                    "Flave",
                    "flave.js"
                ],
                "extensions": [
                    ".flave"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "flave",
                "scopeName": "source.flave",
                "path": "./syntaxes/flave.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "flave",
                "path": "./snippets/flave.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Flave configuration",
            "properties": {
                "flave.compile": {
                    "type": "object",
                    "description": "Configuration options for Flave extension.",
                    "properties": {
                        "compileOnSave": {
                            "type": "boolean",
                            "description": "Auto compile flave files on save.",
                            "default": null
                        }
                    }
                }
            }
        }
    }
}